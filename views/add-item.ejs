<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('./includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/<% if (editing) { %>edit-item<% } else { %>add-item<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Item Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= item.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity" id="quantity" step="0.01" value="<% if (editing) { %><%= item.quantity %><% } %>">
            </div>
            <div class="form-control">
                <label for="exp_date">Expiry Date</label>
                <input type="text" name="exp_date" id="exp_date" value="<% if (editing) { %><%= item.exp_date %><% } %>">
            </div>
            <div class="form-control">
                <label for="category">Category</label>
                <input type="text" name="category" id="category" value="<% if (editing) { %><%= item.category %><% } %>">
            </div>
            <div class="form-control">
                <label for="owner">Owner</label>
                <input type="text" name="owner" id="owner" value="<% if (editing) { %><%= item.owner %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= item._id %>" name="itemId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Item<% } else { %>Add Item<% } %></button>
        </form>
    </main>
<%- include('./includes/end.ejs') %>