<div class="ui grid">
    <div class="twelve wide column">
        <div class="ui form">
            <form
                class="product-form"
                action="/<% if (editing) { %>edit-item<% } else { %>add-item<% } %>"
                method="POST"
            >
                <div class="form-control">
                    <label for="title">Title</label>
                    <input
                        type="text"
                        name="title"
                        id="title"
                        value="<% if (editing) { %><%= item.title %><% } %>"
                    />
                </div>
                <div class="form-control">
                    <label for="quantity">Quantity</label>
                    <input
                        type="number"
                        name="quantity"
                        id="quantity"
                        value="<% if (editing) { %><%= item.quantity %><% } %>"
                    />
                </div>
                <div class="form-control">
                    <label for="author">Author</label>
                    <input
                        type="text"
                        name="author"
                        id="author"
                        value="<% if (editing) { %><%= item.author %><% } %>"
                    />
                </div>
                <div class="form-control">
                    <label for="category">Category</label>
                    <input
                        type="text"
                        name="category"
                        id="category"
                        value="<% if (editing) { %><%= item.category %><% } %>"
                    />
                </div>
                <div class="form-control">
                    <label for="ISBN">ISBN</label>
                    <input
                        type="text"
                        name="ISBN"
                        id="ISBN"
                        value="<% if (editing) { %><%= item.ISBN %><% } %>"
                    />
                </div>

                <% if (editing) { %>
                <input type="hidden" value="<%= item._id %>" name="itemId" />
                <% } %>

                <button class="ui button" type="submit">
                    <% if (editing) { %>Update Item<% } else { %>Add Item<% } %>
                </button>
            </form>
        </div>
    </div>
</div>